doctype html
html
    head
        meta(charset="utf-8")
        meta(name="viewport", content="initial-scale=1, maximum-scale=1, user-scalable=no, width=device-width")
        meta(name="apple-mobile-web-app-capable", content="yes")
        meta(name="apple-mobile-web-app-status-bar-style", content="black")
        meta(http-quiv="X-UA-Compatible", content="IE=edge,chrome=1")
        meta(name="description", content="#{__('在线可视化体验 ID3 分类算法.')}")
        title #{__('ID3 分类算法可视化')}
        link(rel="shortcut icon", href="/favicon.ico")
        link(rel="stylesheet", type="text/css", href="/semantic/dist/semantic.min.css")
        link(rel="stylesheet", type="text/css", href="/bower_components/handsontable/dist/handsontable.full.min.css")
        style(type="text/css").
            .cmd {
                -moz-border-radius: 5px;
                -webkit-border-radius: 5px;
                background-color: #202020;
                border: 4px solid silver;
                border-radius: 5px;
                box-shadow: 2px 2px 3px #6e6e6e;
                color: #e2e2e2;
                display: block;
                font: 1em 'andale mono', 'lucida console', monospace;
                line-height: 1em;
                overflow: auto;
                padding: 15px;
            }

            .auto-wrap {
                word-wrap: normal;
                white-space: pre-wrap;
            }

            .hard.auto-wrap {
                word-wrap: break-word;
            }

            #myDiagramDiv {
                min-height: 520px;
                background-color: #6e6e6e;
                width: 100%;
                height: 100%;
            }

body
    div(ng-app="id3Module", ng-controller="ID3Ctrl")
        include partial/nav
        div.ui.one.column.grid(style="height: 80%; margin-bottom: 50px;")
            div.ui.column
                h5 &nbsp;#{__('使用 ID3 算法构建决策树')}
                div.hard.auto-wrap.cmd#myDiagramDiv
        div.ui.two.column.grid
            div.ui.column
                include partial/dash
            div.ui.column
                include partial/id3
        include partial/footer
    div
        script(src="/bower_components/jquery/dist/jquery.min.js")
        script(src="/semantic/dist/semantic.min.js")
        script(src="/bower_components/angular/angular.min.js")
        script(src="/bower_components/angular-sanitize/angular-sanitize.min.js")
        script(src="/bower_components/angular-translate/angular-translate.min.js")
        script(src="/locales/index.js")
        script(src="/scripts/virtual-js/id3-math.js")
        script(src="/scripts/id3-module.js")
        script(src="/bower_components/handsontable/dist/handsontable.full.min.js")
        script(src="/gojs/release/go-debug.js")
        script(type="text/javascript").
